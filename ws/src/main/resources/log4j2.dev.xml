<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="stdout" target="SYSTEM_OUT">
            <RegexFilter regex=".*HTTP/1.1.*" onMatch="DENY" onMismatch="ACCEPT"/>
            <PatternLayout pattern="[%d{yyyy-MM-dd' 'HH:mm:ss}] [%p{lowerCase=true}] %X{application} (pid=%t): %c - %m%n"/>
        </Console>
        <Console name="filter" target="SYSTEM_OUT">
            <PatternLayout pattern="%m [%p{lowerCase=true}] %X{application} (pid=%t) %X{duration}%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="org.hibernate" level="WARNING"/>
        <Logger name="org.hibernate.type" level="WARNING"/>
        <Logger name="be.groups" level="TRACE"/>
        <Logger name="be.groups.lyrics.filter.LoggingFilter" level="WARNING">
            <AppenderRef ref="filter"/>
        </Logger>
        <Root level="WARNING">
            <AppenderRef ref="stdout"/>
        </Root>
    </Loggers>
</Configuration>